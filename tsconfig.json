{
  "compilerOptions": {
    "module": "AMD",
    "noImplicitReturns": false,

    "strictNullChecks": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./dist/app.js",
    "sourceMap": true,
    "target": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "strict": false
  },
  "include": ["**/*"],
  "exclude": [
    "./dist",
    "./src/server",
    "node_modules/**/*.*",
    "./src/pathHTML.ts",
    "**/*.spec.ts"
  ]
}
